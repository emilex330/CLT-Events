                                <% events.forEach(event => { %>
                                    <% if(event.category === 'Other') { %> 
                                        <li>
                                            <a href="/events/<%= event.id %>"><p><%= event.title %></p></a>
                                        </li>
                                    <% } %>
                                <% }); %>
                            </ul>
                    <% } %>
                    
                    <% }); %>
                    <% } else{ %>
                        <h2 class="purpleMessage">There are no events to display. Create one!</h2>
                    <% } %>
            </div>
        </div>
    </main>
