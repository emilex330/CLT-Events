                    <% } %>

                    <% if(event === 'Charity/Fundraiser') { %>  
                        <div class="container-content2">  
                            <h1> <%= event %> </h1>
                            <ul>
                                <% events.forEach(event => { %>
                                    <% if(event.category === 'Charity/Fundraiser') { %> 
                                        <li>
