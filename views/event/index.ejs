                                        <li>
                                            <a href="/events/<%= event.id %>"><p><%= event.title %></p></a>
                                        </li>
                                    <% } %>
                                <% }); %>
                            </ul>
                    <% } %>

                    <% if(event === 'Workshop') { %>  
                        <div class="container-content2">  
                            <h1> <%= event %> </h1>
                            <ul>
                                <% events.forEach(event => { %>
